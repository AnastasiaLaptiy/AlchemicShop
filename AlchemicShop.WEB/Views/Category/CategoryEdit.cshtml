@model AlchemicShop.WEB.Models.CategoryViewModel

@{
    ViewBag.Title = "CategoryEdit";
}

<h2>Edit Category</h2>

@using (Html.BeginForm("CategoryEdit", "Category", FormMethod.Post, new { id = "editform" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="col-md-offset-2 col-md-10">
            <a href="#popup" class="popup-link btn btn-success">Save</a>
            @Html.ActionLink("Back to List", "GetCategoryList", null, new { @class = "btn btn-primary" })
        </div>


        <div id="popup" class="form-group white-popup mfp-hide text-center">
            <p>
                Are you sure?
            </p>
            <div class="d-flex justify-content-around">
                <input type="submit" value="yes" class="popup-ok  btn btn-success" />
                <input type="submit" value="no" class="popup-no btn btn-danger" />
            </div>
        </div>
    </div>
}


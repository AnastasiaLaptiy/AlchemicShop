@model AlchemicShop.WEB.Models.OrderViewModel

<h4>New Order</h4>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="center-form">
        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <div class="col-md-10">
                    <P> Choose sheduled date:</P>
                    @Html.EditorFor(model => model.SheduledDate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SheduledDate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}



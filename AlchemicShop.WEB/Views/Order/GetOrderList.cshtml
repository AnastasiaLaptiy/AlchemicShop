@model IEnumerable<AlchemicShop.WEB.Models.OrderViewModel>

@{
    ViewBag.Title = "Order List";
}

<table class="table">
    <tr>
        <th>
            Customer
        </th>
        <th>
            Sheduled Date
        </th>
        <th>
            Closed Date
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @foreach (var user in ViewBag.Users)
            {
                if (user.Id == item.UserId)
                {
                    <td>
                        @user.Name
                    </td>
                }
            }
            <td>
                @Html.DisplayFor(modelItem => item.SheduledDate)
            </td>
            @if (item.ClosedDate != null)
            {
                <td>
                    @Html.DisplayFor(modelItem => item.ClosedDate)
                </td>
            }
            else
            {
                <td>
                    -
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            @if (@HttpContext.Current.User.Identity.Name == "User")
            {
                <td>
                    @Html.ActionLink("Details", "GetUserOrders", new { id = item.Id }) |
                </td>
            }

            @if (@HttpContext.Current.User.Identity.Name == "Admin")
            {
                <td>
                    @Html.ActionLink("Edit", "EditOrder", new { id = item.Id }) |
                    @Html.ActionLink("Details", "GetOrderDetails", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteOrder", new { id = item.Id })
                </td>
            }
            else
            {
                <td></td>
            }

        </tr>
    }
</table>

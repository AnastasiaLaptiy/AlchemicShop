@model AlchemicShop.WEB.Models.OrderViewModel

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Customer
        </dt>

        @foreach (var user in ViewBag.Users)
        {
            if (user.Id == Model.CustomerId)
            {
                <dd>
                    @user.Name
                </dd>

            }
        }

        <dt>
            Shedulded Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SheduledDate)
        </dd>

        <dt>
            Closed Date
        </dt>

        @if (Model.ClosedDate != null)
        {
            <dd>
                @Html.DisplayFor(modelItem => Model.ClosedDate)
            </dd>
        }
        else
        {
            <dd>
                -
            </dd>
        }

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "GetOrderList")
        </div>
    }
</div>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <ul class="nav">
                    <li class="nav-item">
                        <p class="nav-link">@Html.ActionLink("Home", "Index")</p>
                    </li>
                    <li class="nav-item">
                        <p class="nav-link">@Html.ActionLink("About", "About")</p>
                    </li>
                    <li class="nav-item">
                        <p class="nav-link">@Html.ActionLink("Product", "GetAllProduct", "Product")</p>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#"> sign in</a>
                    </li>
                </ul>
                @RenderBody()
                <hr />
            </div>

            <footer>
                <p>&copy; @DateTime.Now.Year - AstroDrave Project</p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>